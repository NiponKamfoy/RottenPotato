%h1 All Movies

%table#movies
    %thead
        %tr
            %th Movies Title
            %th Rating
            %th Release Date
            %th More Info
    %thbody
        - @movies.each do |movie|
            %tr
                %td= movie.title
                %td= movie.rating
                %td= movie.release_date
                %td= link_to "More about #{movie.title}", movie_path(movie)